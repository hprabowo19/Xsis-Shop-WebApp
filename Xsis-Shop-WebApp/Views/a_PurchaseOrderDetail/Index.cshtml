@model IEnumerable<Xsis_Shop_ViewModels.a_PurchaseOrderDetailViewModel>
@{
    ViewBag.Title = "a_PurchaseOrderDetail";
    ViewBag.Selecteda_PurchaseOrderDetail = "active toggled";
    ViewBag.Selecteda_PurchaseOrderDetailList = "active";
}
<style>

    .chosen {
        width: 100%;
    }
</style>
<div class="block-header">
    <h2>@ViewBag.Title</h2>
</div>
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-sm-1">
                <a href="@Url.Action("Create", ViewBag.Title)" class="btn bgm-teal">Create New a_PurchaseOrderDetail</a>
            </div>
            <div class="col-sm-2"></div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="col-sm-3">
                    <div class="fg-line">
                        <div class="select">
                            @Html.DropDownList("PurchaseOrderID", null, "-- Pilih PurchaseOrder --", htmlAttributes: new { @class = "chosen", @Value = ViewBag.Selecteda_PurchaseOrder })
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="fg-line">
                        <div class="select">
                            @Html.DropDownList("PurchaseOrderDetailID", null, "-- Pilih PurchaseOrderDetail --", htmlAttributes: new { @class = "chosen", @Value = ViewBag.Selecteda_PurchaseOrderDetail })
                        </div>
                    </div>
                </div>
                <div class="col-sm-1">
                    <button type="submit" class="btn bgm-teal"><i class="zmdi zmdi-search"></i></button>
                </div>
            }
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        No.
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Code)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UnitPrice)
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @{int i = 0;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @(++i)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>
                            <td>
                                $ @Html.DisplayFor(modelItem => item.UnitPrice)
                            </td>
                            <td>
                                <a href="@Url.Action("Details", ViewBag.Title, new { id = item.ID })" class="btn btn-primary btn-icon"><i class="zmdi zmdi-collection-text"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>